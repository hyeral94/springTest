<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.som.test.lesson04.dao.SellerDAO">
 	<insert id="insertSeller" parameterType="map">
 		INSERT INTO `seller`
 		(
 			`nickname`
 			, `profileImageUrl`
 			, `temperature`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{nickname}
 			, #{profileImageUrl}
 			, #{temperature}
 			, now()
 			, now()
 		)
 	
 	</insert>
 	
 	 <select id="selectLastSeller" resultType="com.som.test.lesson04.model.Seller">
 		SELECT 
 			`id`
 			, `nickname`
 			, `profileImageUrl`
 			, `temperature`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`seller`	
 			
 		ORDER BY `id` DESC
 		LIMIT 1		
 
 	
 	</select>
 	
 	
 	
 	<select id="selectSeller" resultType="com.som.test.lesson04.model.Seller"
 	parameterType="int">
 		SELECT 
 			`id`
 			, `nickname`
 			, `profileImageUrl`
 			, `temperature`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`seller`	
 		WHERE
 			`id` = #{id}
 	
 	</select>
 
 
 
 </mapper>