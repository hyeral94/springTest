<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper  namespace="com.som.test.lesson06.dao.BookingDAO">
 	<insert id="insertBooking" parameterType="map">
 		INSERT INTO `booking`
 		(
 		 	`name`
 			, `headcount`
 			, `day`
 			, `date`
 			, `phoneNumber`
 			, `state`
 			, `createdAt`
 			, `updatedAt`
		)
 		VALUES
 		(
 			#{name}
 			, #{headcount}
 			, #{day}
 			, #{date}
 			, #{phoneNumber}
 			, "대기중"
 			, now()
 			, now()
 		)
 	
 	</insert>
 	<select id="selectBooking" resultType="com.som.test.lesson06.model.Booking">
 		SELECT
 			`id`
 			, `name`
 			, `headcount`
 			, `day`
 			, `date`
 			, `phoneNumber`
 			, `state`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`booking`	

 	</select>
 	
 	<delete id="deleteBooking" parameterType="int" >
 		DELETE FROM `booking`
 		WHERE `id` = #{id}		
 	
 	</delete>
 	
 	<select id="selectCheckBooking" parameterType="map" resultType="com.som.test.lesson06.model.Booking">
 		SELECT
 			`id`
 			, `name`
 			, `headcount`
 			, `day`
 			, `date`
 			, `phoneNumber`
 			, `state`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`booking`	
 		WHERE
 			`name` = #{name}
 			AND `phoneNumber` = #{phoneNumber}

 	</select>

 
 </mapper>