<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.som.test.lesson06.dao.FavoriteDAO">
 	<select id="selectFavorite" resultType="com.som.test.lesson06.model.Favorite">
 		SELECT INTO 
 			`id`
 			, `name`
 			, `url`
 			, `createdAt`
 			, `updatedAt`
 		FROM 
 			`favorite`	
 	
 	
 	</select>
	 <insert id="insertFavorite" parameterType="map">
	 		INSERT INTO `favorite`
				(
					`name`
		 			, `url`
		 			, `createdAt`
		 			, `updatedAt`
				)
				VALUES
				(
					#{name}
					, #{url}
					, now()
					, now()
				)
	 	</insert>
 
 </mapper>